<form_pane>
<fieldset class="adminform">
    <legend>Тестирование</legend>
    <table cellspacing="1" class="admintable">
        <tbody>
        <tr>
            <td width="185" valign="top" class="key">
                Количество попыток 
            </td>
            <td>
                <input type="number" name="ticket_count" value="5" style="width: 60px;" проверка="required" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Основная тема 
            </td>
            <td>
                <справочник вид="список" имя="dic_quiz_topics" name="main_topic" проверка="required" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Использовать параметры тестирования из настройки
            </td>
            <td>
                <справочник вид="список" имя="dic_quiz_settings" name="setting" />
            </td>
        </tr>
        </tbody>
    </table>
</fieldset>
</form_pane>