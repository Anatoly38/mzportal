<form_pane>
<fieldset class="adminform">
    <legend>Параметры</legend>
    <table cellspacing="1" class="admintable">
        <tbody>
        <tr>
            <td width="185" valign="top" class="key">
                Выберите тему 
            </td>
            <td>
                <справочник вид="список" имя="dic_quiz_topics" name="topic" проверка="required" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Использовать параметры тестирования из настройки
            </td>
            <td>
                <справочник вид="список" имя="dic_quiz_settings" name="setting" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Количество вопросов 
            </td>
            <td>
                <input type="number" name="q_count" value="100" style="width: 60px;"/>
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Продолжительность 
            </td>
            <td>
                <input type="number" name="duration" style="width: 60px;" value="60" min="0" max="300" /> мин.
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <div id="radio">
                    <input type="radio" id="radio1" name="q_order" value="ordered" /><label for="radio1">Сортировка от первого к последнему (по базе данных)</label>
                    <input type="radio" id="radio2" name="q_order" value="random" checked="checked" /><label for="radio2">В случайном порядке</label>
                </div>
            </td>
        </tr>        
        <tr>
            <td colspan="2">
                <div id="checkbox">
                    <input type="checkbox" id="show_answers" name="show_answers" value="1" /><label for="show_answers">Показывать варианты ответа при выводе результатов</label>
                </div>
            </td>
        </tr>
        </tbody>
    </table>
</fieldset>
</form_pane>