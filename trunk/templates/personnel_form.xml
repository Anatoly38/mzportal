<form_pane>
<input type="hidden" name="oid[]" value="" />
<input type="hidden" name="pers_id" value="" />
<fieldset class="adminform">
    <legend>Лечебное учреждение</legend>
    <table cellspacing="1" class="admintable">
        <tbody>
        <tr>
            <td valign="top" class="key">
                Выбор ЛПУ
            </td>
            <td>
                <input type="hidden" id="lpu_id" name="lpu_id" value="" class="required" />
                <справочник вид="дерево" имя="dic_subordination" name="lpu_id" check_acl="required" />
            </td>
        </tr>
        </tbody>
    </table>
</fieldset>
<fieldset class="adminform">
    <legend>Основные сведения</legend>
    <table cellspacing="1" class="admintable">
        <tbody>
        <tr>
            <td width="185" valign="top" class="key">
                Табельный номер
            </td>
            <td>
                <input type="text" id="табельный_номер" name="табельный_номер" style="width: 200px; height: 17px;" value="" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Фамилия
            </td>
            <td>
                <input type="text" id="фамилия" name="фамилия" style="width: 200px; height: 17px;" value="" class="required rusname" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Имя
            </td>
            <td>
                <input type="text" id="имя" name="имя" style="width: 200px; height: 17px;" value="" class="required rusname" />
            </td>
        </tr>        
        <tr>
            <td width="185" valign="top" class="key">
                Отчество
            </td>
            <td>
                <input type="text" name="отчество" id="отчество" style="width: 200px; height: 17px;" value="" class="rusname" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Пол
            </td>
            <td>
                <справочник вид="список" имя="dic_administrative_sex" name="пол" проверка="required" />
            </td>
        </tr>
        <tr>
            <td valign="top" class="key">
                Дата рождения
            </td>
            <td>
                <input type="text" name="дата_рождения" id="дата_рождения" style="width: 80px; height: 17px;" default_date="-30y" value="" class="required dateISO popup_date"/>                          
            </td>
        </tr>
        <tr>
            <td valign="top" class="key">
                Дата смерти
            </td>
            <td>
                <input type="text" name="дата_смерти" style="width: 80px; height: 17px;" value="" class="dateISO popup_date"/>                          
            </td>
        </tr>
        </tbody>
    </table>
</fieldset>
<fieldset class="adminform">
    <legend>Дополнительные сведения</legend>
    <table cellspacing="1" class="admintable">
        <tbody>
        <tr>
            <td width="185" valign="top" class="key">
                Гражданство
            </td>
            <td>
                <справочник вид="список" имя="dic_citizenship" name="гражданство" проверка="required" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                СНИЛС
            </td>
            <td>
                <input type="text" name="снилс" id="снилс" style="width: 120px; height: 17px;" value="" class="required snils" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                ИНН
            </td>
            <td>
                <input type="text" name="инн" id="инн" style="width: 120px; height: 17px;" value="" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Телефон
            </td>
            <td>
                <input type="text" name="телефон" id="телефон" style="width: 120px; height: 17px;" value="" class="numbers" />
            </td>
        </tr>
        <tr>
            <td width="185" valign="top" class="key">
                Семейное положение
            </td>
            <td>
                <справочник вид="список" имя="dic_marriage" name="семейное_положение" проверка="required" />
            </td>
        </tr> 
        <tr>
            <td width="185" valign="top" class="key">
                Наличие детей младше 16 лет
            </td>
            <td>
                <input type="checkbox" name="дети" id="дети" value="1" />
            </td>
        </tr>        
        <tr>
            <td width="185" valign="top" class="key">
                Наличие личного автомобиля
            </td>
            <td>
                <input type="checkbox" name="автомобиль" id="автомобиль" value="1" />
            </td>
        </tr>
        </tbody>
    </table>
</fieldset>
</form_pane>